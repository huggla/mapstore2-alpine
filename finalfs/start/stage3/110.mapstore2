# Set in stage2:
# ---------------------------------------------------------
# set -ef +am
# isFirstRun
# VAR_*
# All functions in /start/functions

if [ "$isFirstRun" == "true" ] && [ "$VAR_ROOT_APP" == "mapstore2" ]
then
   replaceDirWithLink "/usr/local/tomcat/webapps" "$VAR_WEBAPPS_DIR" "mapstore"
   if [ -s "$VAR_MAPSTORE_CONFIG_DIR/localConfig.json" ]
   then
      cp -a "$VAR_MAPSTORE_CONFIG_DIR/localConfig.json" "$VAR_WEBAPPS_DIR/ROOT/"
   else
      cp -a "$VAR_WEBAPPS_DIR/ROOT/localConfig.json" "$VAR_MAPSTORE_CONFIG_DIR/"
   fi
   replaceFileWithLink "$VAR_WEBAPPS_DIR/ROOT/WEB-INF/classes/users.ldif" "$VAR_MAPSTORE_CONFIG_DIR/users.ldif"
fi
